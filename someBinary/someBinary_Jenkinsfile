#!/usr/bin/env groovy


pipeline {

    environment {
        WORKSPACE = "${pwd()}/someBinary"
    }

    agent {
        dockerfile {
            filename "${WORKSPACE}/Dockerfile"
        }
    }

    stages {
        stage("Checkout") {
            steps {
                git credentialsId: 'git-ssh', url: 'git@gitlab.com:herychemo/QuickTestJenkinsFile.git'
            }
        }
        stage("Build") {
            steps {
                dir(WORKSPACE) {
                    sh """
                        rm -rf build 
                        mkdir build
                        cd build
                        cmake ..
                        make
                    """
                }
            }
        }
        stage("Run") {
            steps {
                dir(WORKSPACE) {
                    sh """
                        ./build/SomeBinary
                    """
                }
            }
        }
        stage("Archive") {
            steps {
                archiveArtifacts artifacts: "${WORKSPACE}/build/SomeBinary", onlyIfSuccessful: true
            }
        }
    }

}
