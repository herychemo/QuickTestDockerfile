#!/usr/bin/env groovy


pipeline {

    agent {
        dockerfile {
            filename 'someBinary/Dockerfile'
        }
    }

    environment {
        WORKSPACE = "${pwd()}/someBinary/"
    }

    stages {
        stage("Checkout") {
            steps {
                git credentialsId: 'git-ssh', url: 'git@gitlab.com:herychemo/QuickTestJenkinsFile.git'
            }
        }
        stage("Build") {
            steps {
                dir(WORKSPACE) {
                    sh """
                        rm -rf build 
                        mkdir build
                        cd build
                        cmake ..
                        make
                    """
                }
            }
        }
        stage("Run") {
            steps {
                dir(WORKSPACE) {
                    sh """
                        ./build/SomeBinary 
                    """
                }
            }
        }
    }

}
